<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">

        <brls:Box
                id="video/card/pic_box"
                width="100%"
                height="68%">


                <brls:Image
                        id="video/card/picture"
                        scalingType="fit"
                        height="100%"
                        width="100%"
                        backgroundColor="@theme/color/grey_4"
                        cornerRadius="4" />

                <brls:Box
                        positionBottom="0"
                        positionType="absolute"
                        paddingLeft="10"
                        paddingRight="10"
                        width="100%"
                        height="20%"
                        alignItems="center">

                        <brls:Label
                                id="video/card/label/chno"
                                positionType="absolute"
                                positionRight="10"
                                fontSize="16" />
                </brls:Box>

        </brls:Box>

          <SVGImage
                        id="video/card/ico/favorite"
                        positionType="absolute"
                        positionLeft="10"
                        positionTop="10"
                        height="30"
                        width="30"
                        SVG="@res/svg/ico-favorites-activate.svg" />
        <brls:Box
                margin="10"
                axis="column">
                <TextBox
                        marginBottom="0"
                        wireframe="false"
                        id="video/card/label/title"
                        fontSize="20"
                        lineHeight="1.5"
                        maxRows="1"
                        width="100%"
                        height="30" />

                <brls:Box
                        grow="1"
                        width="100%"
                        wireframe="false"
                        alignItems="center">
                        <brls:Box
                                id="video/card/hint"
                                height="18"
                                marginTop="2"
                                shrink="0"
                                backgroundColor="@theme/color/yellow_1"
                                cornerRadius="4"
                                justifyContent="center"
                                alignItems="center">
                                <brls:Label
                                        id="video/card/label/group"
                                        fontSize="13"
                                        margin="2"
                                        horizontalAlign="center"
                                        textColor="@theme/font/yellow_1" />
                        </brls:Box>
                </brls:Box>
        </brls:Box>
</brls:Box>